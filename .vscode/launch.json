    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/src/MicSer.Api/bin/Debug/net5.0/MicSer.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Debug Explorer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-explorer",
            "program": "${workspaceFolder}/src/MicSer.Explorer/bin/Debug/net5.0/MicSer.Explorer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/MicSer.Explorer",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ]
}